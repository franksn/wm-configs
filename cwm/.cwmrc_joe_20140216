#Font for menu
fontname "standard 07_57 caps:pixelsize=10"

#Borderwidth
borderwidth 2
color activeborder grey
color inactiveborder black

#Colors
color menubg '#1a1b1c'
color font '#808080'

#App Menu
command st			st
command urxvt		urxvt
command tmux+urxvt	"urxvt -e tmux"
command emacs		emacs
command mixer		"urxvt -e alsamixer"
command zathura		zathura
command mc		"urxvt -e mc -b"

#use urxvt instead of Xterm
command term "urxvt"
bind MS-p    "dmenu_run"
bind CS-Left unmap
bind CS-Right unmap
bind CS-Up unmap
bind CS-Down unmap
bind C-Left unmap
bind C-Right unmap
bind C-Up unmap
bind C-Down unmap
mousebind M-2 unmap
bind 4S-Left bigptrmoveleft
bind 4S-Right bigptrmoveright
bind 4S-Up bigptrmoveup
bind 4S-Down bigptrmovedown
bind 4-Left ptrmoveleft
bind 4-Right ptrmoveright
bind 4-Up ptrmoveup
bind 4-Down ptrmovedown
mousebind M-3 window_resize
